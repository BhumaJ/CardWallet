<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddCard">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/background_white"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/card_view_padding"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2.5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="CARD NO."></TextView>

                <com.quixom.cardwallet.library.CreditCardForm
                    android:id="@+id/credit_card_form"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1.5"
                    android:textSize="@dimen/text_size_hint"
                    app:include_helper="false"
                    app:include_zip="false"
                    app:input_background="@drawable/background_border" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2.5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="NAME ON CARD"></TextView>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1.5"
                    android:paddingLeft="@dimen/card_view_padding"
                    android:gravity="left|center_vertical"
                    android:background="@drawable/background_edittext"
                    android:hint="YOUR NAME ON THE CARD"
                    android:maxLines="1"
                    android:textSize="@dimen/text_size_hint"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:weightSum="2.5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="EXPIRY DATE"></TextView>

                    <EditText
                        android:id="@+id/edit_text_expiry_date"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1.5"
                        android:paddingLeft="@dimen/card_view_padding"
                        android:background="@drawable/background_edittext"
                        android:hint="XX/YY"
                        android:textSize="@dimen/text_size_hint"></EditText>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical"
                    android:weightSum="2.5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text=""></TextView>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_gravity="bottom"
                        android:layout_weight="1.5"
                        android:src="@drawable/cvv" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:weightSum="2.5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="CVV"></TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1.5"
                        android:background="@drawable/background_edittext"
                        android:paddingLeft="@dimen/card_view_padding"
                        android:hint="CVV"
                        android:textSize="@dimen/text_size_hint"></EditText>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_save_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="SAVE" />

</RelativeLayout>
